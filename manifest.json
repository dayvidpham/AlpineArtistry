{
  "name": "AlpineArtistry",
  "version": "0.1",
  "description": "Wreak artistic madness onto all the webpages of your liking",
  "permissions": [
    "storage",
    "offscreen",
    "idle",
    "scripting",
    "tabs",
    "webNavigation",
    "activeTab",
    "*://*/*"
  ],
  "action": {
      "default_icon": {
        "16": "assets/images/AlpineArtistryLogo16.png",
        "32": "assets/images/AlpineArtistryLogo32.png",
        "48": "assets/images/AlpineArtistryLogo48.png",
        "128": "assets/images/AlpineArtistryLogo128.png"
      }
    },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/images/*"],
      "matches": ["*://*/*"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "assets/images/AlpineArtistryLogo16.png",
    "32": "assets/images/AlpineArtistryLogo32.png",
    "48": "assets/images/AlpineArtistryLogo48.png",
    "128": "assets/images/AlpineArtistryLogo128.png"
  },
  "manifest_version": 3
}
