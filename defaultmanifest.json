{
  "name": "AlpineArtistry",
  "version": "0.1",
  "description": "Wreak artistic madness onto all the webpages of your liking",
  "permissions": [
    "activeTab", "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "assets/images/AlpineArtistryLogo16.png",
    "32": "assets/images/AlpineArtistryLogo32.png",
    "48": "assets/images/AlpineArtistryLogo48.png",
    "128": "assets/images/AlpineArtistryLogo128.png"
  },
  "background": {
    "service_worker": "scripts/colors.js"
  },
  "action": {
    "default_icon": {
      "16": "assets/images/AlpineArtistryLogo16.png",
      "32": "assets/images/AlpineArtistryLogo32.png",
      "48": "assets/images/AlpineArtistryLogo48.png",
      "128": "assets/images/AlpineArtistryLogo128.png"
    }
  },
  "content_scripts": [
    {
      "js" : ["scripts/colors.js"],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*"
      ]
    }
  ],
  "manifest_version": 3
}
